{
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"],
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "composite": true,
    "rootDir": "src",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "types": []
  }
}
